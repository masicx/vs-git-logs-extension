{
  "name": "git-logs-extension",
  "displayName": "Git logs report",
  "description": "Pull the changes and generates the logs for all the developers. Use a default yml file to configurate the output.",
  "version": "1.2.0",
  "icon": "assets/icon.jpeg",
  "engines": {
    "vscode": "^1.89.0"
  },
  "publisher": "salo33",
  "repository": {
    "type": "git",
    "url": "https://github.com/salo3/git-logs-extension"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-logs-extension.gitReport",
        "title": "Git logs report"
      }
    ],
    "configuration": {
      "title": "Git logs configuration",
      "properties": {
        "git-logs-extension.filters.author": {
          "type": "string",
          "default": "",
          "description": "Default author name used to filter commits"
        },
        "git-logs-extension.filters.askForAuthor": {
          "type": "boolean",
          "default": false,
          "description": "Always display a dialog to ask for author name"
        },
        "git-logs-extension.filters.since": {
          "type": "string",
          "default": "today",
          "description": "Date where it is going to start to generate the report"
        },
        "git-logs-extension.filters.until": {
          "type": "string",
          "default": "today",
          "description": "Date where it is going to end to generate the report"
        },
        "git-logs-extension.csv.columns": {
          "type": "array",
          "default": [
            {
              "order": 3,
              "key": "Activity date",
              "value": "date"
            },
            {
              "order": 1,
              "key": "Branch",
              "value": "branch"
            },
            {
              "order": 4,
              "key": "Comments",
              "value": "comments"
            },
            {
              "order": 2,
              "key": "Developer",
              "value": "authorName"
            },
            {
              "order": 5,
              "key": "Repo name",
              "value": "repoName"
            },
            {
              "order": 6,
              "key": "Total # files Changed",
              "value": "filesChanged"
            },
            {
              "order": 7,
              "key": "Total # of Deletions",
              "value": "deletions"
            },
            {
              "order": 8,
              "key": "Total # of Insertions",
              "value": "insertions"
            },
            {
              "order": 9,
              "key": "Total # of commits",
              "value": "commits"
            }
          ],
          "description": "CSV columns"
        },
        "git-logs-extension.csv.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "If this value is set, the generated CSV file will be opened. By default, it will be opened."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "copy-webpack-plugin": "^12.0.2"
  }
}