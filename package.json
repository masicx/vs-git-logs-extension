{
  "name": "git-logs-extension",
  "displayName": "git logs extension",
  "description": "Pull the changes and generates the logs for all the developers. Use a default yml file to configurate the output.",
  "version": "1.1.1",
  "icon": "assets/icon.jpeg",
  "engines": {
    "vscode": "^1.89.0"
  },
  "publisher": "salo33",
  "repository": {
    "type": "git",
    "url": "https://github.com/salo3/git-logs-extension"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-logs-extension.gitReport",
        "title": "Git logs report"
      }
    ],
    "configuration": {
      "title": "Git logs extension configuration",
      "properties": {
        "git-logs-extension.author": {
          "type": "string",
          "default": "",
          "description": "Author name"
        },
        "git-logs-extension.since": {
          "type": "string",
          "default": "today",
          "description": "Since date"
        },
        "git-logs-extension.until": {
          "type": "string",
          "default": "today",
          "description": "Until date"
        },
        "git-logs-extension.csvColumns": {
          "type": "object",
          "default": {
            "Activity date": "date",
            "Branch": "branch",
            "Comments": "comments",
            "Developer": "authorName",
            "Repo name": "repoName",
            "Total # files Changed": "filesChanged",
            "Total # of Deletions": "deletions",
            "Total # of Insertions": "insertions",
            "Total # of commits": "commits"
          },
          "description": "CSV columns"
        },
        "git-logs-extension.openGeneratedCSV": {
          "type": "boolean",
          "default": true,
          "description": "Show generated CSV"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "copy-webpack-plugin": "^12.0.2"
  }
}